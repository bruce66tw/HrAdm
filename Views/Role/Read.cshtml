@{ 
	var cols = _Fun.DefHCols;
}

<script src="~/js/view/Role.js"></script>
<script type="text/javascript">
    $(function () {
        _me.init();
    });
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "角色維護" } })
<div class="xp-prog">
    <div id="divRead">
		<form id='rform' class='xg-form' style="margin-bottom:0;">
			<div class="row">
				@await Component.InvokeAsync("XiText", new { title = "角色名稱", fid = "Name", maxLen = 30, inRow = true })
				@await Component.InvokeAsync("XgFindTbar", new { hasReset = true })
			</div>
        </form>

		<div class='xg-btns-box'>
			@await Component.InvokeAsync("XgCreate")
        </div>
        <table id="table1" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
					<th>角色名稱</th>
					<th>維護</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <partial name="Edit" />
    </div>
</div>